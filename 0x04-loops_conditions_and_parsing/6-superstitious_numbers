#!/usr/bin/env bash
# This script displays Holberton School 10 times using while loop, on 9th iteration print hi on new line
i=1
BLC="bad luck from China"
BLJ="bad luck from Japan"
BLI="bad luck from Italy"
while [ $i -le 20 ]
do
	echo "$i"
	case $i in
		"4") echo "$BLC";;
		"9") echo "$BLJ";;
		"17") echo "$BLI";;
	esac
	(( i++ ))
done
